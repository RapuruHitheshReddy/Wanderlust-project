<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <h1 class="mb-5 fw-bold text-center display-5">Explore All Listings</h1>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% allListings.forEach(listing => { %>
      <div class="col">
        <div class="card h-100 border-0 shadow-lg rounded-4 overflow-hidden d-flex flex-column">
          <!-- Listing Image -->
          <img 
            src="<%= listing.image.url %>" 
            alt="<%= listing.title %>" 
            class="card-img-top" 
            style="height: 230px; object-fit: cover;"
          />

          <!-- Listing Content -->
          <div class="card-body d-flex flex-column p-4">
            <h5 class="card-title fw-semibold mb-2"><%= listing.title %></h5>
            <p class="card-text text-muted mb-1">
              <i class="fa-solid fa-location-dot me-1"></i> <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="card-text text-dark fw-bold mb-3">â‚¹<%= listing.price.toLocaleString('en-IN') %> / night</p>
            
            <div class="mt-auto">
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary w-100">
                <i class="fa-solid fa-eye me-1"></i> View Details
              </a>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
