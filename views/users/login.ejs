<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center py-5" style="min-height: 80vh;">
  <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 400px; width: 100%;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4 fw-bold text-primary">Login to WanderLust</h2>

      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
            placeholder="Enter your username"
          />
          <div class="invalid-feedback">Please enter your username.</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
            placeholder="Enter your password"
          />
          <div class="invalid-feedback">Please enter your password.</div>
        </div>

        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-primary btn-lg shadow-sm">Login</button>
        </div>
      </form>

      <div class="text-center mt-3">
        <small class="text-muted">Don't have an account? 
          <a href="/signup" class="link-primary fw-semibold">Sign up</a>
        </small>
      </div>
    </div>
  </div>
</div>
